# Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control!

# AWS Configuration
aws_region = "us-east-1"
project_name = "iitd"
environment = "dev"  # Options: dev, staging, prod

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]
enable_nat_gateway = true
enable_vpn_gateway = false
single_nat_gateway = false  # Set to true for cost optimization in dev

# EKS Configuration
eks_node_instance_types = ["t3.medium"]
eks_node_desired_size = 2
eks_node_min_size = 1
eks_node_max_size = 4

# Database Configuration
database_name = "iitd_db"
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_engine_version = "5.0"

# Database Credentials (SENSITIVE - use secrets manager in production)
db_master_username = "admin"
db_master_password = "CHANGE_THIS_SECURE_PASSWORD"

